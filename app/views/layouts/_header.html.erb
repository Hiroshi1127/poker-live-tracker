<header class = "bg-dark">
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark navbar-fixed-top">
      <%= link_to "sample app", root_path, id: "logo", class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-outo">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Help", help_path, class: "nav-link" %></li>
          <% if logged_in? %>
            <li class="nav-item"><%= link_to "Save Session", new_poker_session_path, class: "nav-link" %></li>
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <div class="dropdown-menu">
                <%= link_to "Profile", current_user, class: "dropdown-item" %>
                <%= link_to "Settings", '#', class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to "Log out", logout_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li><%= link_to "Log in", login_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>